
<% @restaurants.order(:price) %>






<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Food</th>
      <th>Address</th>
      <th>Raiting</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.price %></td>
        <td><%= restaurant.food %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.raiting %></td>
        <td><%= restaurant.description %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Remove', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
