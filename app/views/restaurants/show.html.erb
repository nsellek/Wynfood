<p id="notice"><%= notice %></p>


<div class="asset_style">
  <hr>
    <p>
      <strong>Name:</strong>
      <%= @restaurant.name %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @restaurant.price %>
    </p>

    <p>
      <strong>Food:</strong>
      <%= @restaurant.food %>
    </p>

    <p>
      <strong>Address:</strong>
      <%= @restaurant.address %>
    </p>

    <p>
      <strong>Raiting:</strong>
      <%= @restaurant.reviews.average(:raiting).to_f %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @restaurant.description %>
    </p>
    <hr>
</div>


<h3 class= "review">Reviews:</h3>
<div class='asset_style'>
 <% @restaurant.reviews.each do |review| %>
  <p>
    <%= review.comment %>
  </p>
  <p>
    Added on: <%= review.created_at %>
  </p>
  <br>
  <% end %>
</div>
  <h3 class= "new_review">New Review</h3>
  <br>
  <%= render 'reviews/form' %>

  <br>

<div class="col-md-6 col-md-offset-3">
  <div class= "back_btn">
      <%= button_to 'Home Page', controller: 'restaurants', action: 'home', :method => :get %>
  </div>
</div>
