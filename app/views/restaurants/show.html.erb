<p id="notice"><%= notice %></p>


<div class="home_button show_text">
  <hr>
  <p>
    <strong>Name:</strong>
    <%= @restaurant.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= number_to_currency @restaurant.price %>
  </p>

  <p>
    <strong>Food:</strong>
    <%= @restaurant.food %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @restaurant.address %>
  </p>

  <p>
    <strong>Raiting:</strong>
    <%= @restaurant.average %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @restaurant.description %>
  </p>
  <hr>
</div>


<h3 class= "review">Reviews:</h3>
<div class='home_button show_text'>
  <% @restaurant.reviews.each do |review| %>
  <p>
    <%= review.comment %>
  </p>
  <p>
    Added on: <%= time_ago_in_words(review.created_at) %> ago
  </p>
  <br>
  <% end %>
</div>
<h3 class= "review">New Review</h3>
<br>
<%= render 'reviews/form' %>
<br>
<div class="home_button">
  <%= button_to 'Home Page', {controller: 'restaurants', action: 'home'}, class: 'btn btn-info btn-lg', :method => :get %>
</div>
